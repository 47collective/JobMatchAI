# Job Application AI Agent Configuration
# Copy this file to .env and fill in your actual values

# Resume and Cover Letter Files
RESUME_PATH=path/to/your/resume.txt
COVER_LETTER_INSTRUCTIONS_PATH=path/to/your/cover_letter_instructions.txt

# Ollama Local LLM Configuration
# Make sure Ollama is installed and running: https://ollama.ai/download
# Test connection: curl http://localhost:11434/api/generate -d '{"model": "llama3.2:latest", "prompt": "Hello, world!"}'
# Available models: llama3.2:latest, mistral:7b, mistral:latest, bjj-groker:latest
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_MAX_TOKENS=2000
OLLAMA_TEMPERATURE=0.7

# Browser Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# Default Job URL (for testing - can be overridden via command line)
DEFAULT_JOB_URL=https://example.com/job-posting
